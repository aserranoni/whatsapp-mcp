{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-undef": "off",
    "no-case-declarations": "off"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "*.js",
    "jest.config.js",
    "jest.setup.js"
  ]
}