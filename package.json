{
  "name": "whatsapp-mcp-server",
  "version": "2.0.0",
  "description": "Advanced WhatsApp MCP server with intelligent auth system, TTS support, and comprehensive session management for seamless Claude integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "whatsapp-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json",
    ".env.example",
    "docs/**/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --watchAll=false",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepare": "npm run build",
    "init-whatsapp": "node init-whatsapp.js",
    "auth": "node init-whatsapp.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol", 
    "whatsapp",
    "whatsapp-web",
    "notifications",
    "audio",
    "tts",
    "text-to-speech",
    "elevenlabs",
    "voice-notes",
    "messaging",
    "automation",
    "bot",
    "claude",
    "authentication",
    "session-management",
    "strategy-pattern",
    "state-machine",
    "typescript"
  ],
  "author": {
    "name": "WhatsApp MCP Server Contributors"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/whatsapp-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/whatsapp-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/whatsapp-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "whatsapp-web.js": "^1.25.0",
    "puppeteer": "^22.0.0",
    "qrcode-terminal": "^0.12.0",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  }
}